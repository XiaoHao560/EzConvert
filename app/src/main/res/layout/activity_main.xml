<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#f5f5f5"
     android:padding="16dp">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <RelativeLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:textSize="24sp"
                 android:textColor="#2196F3"
                 android:text="EzConvert 媒体转换器"
                 android:textStyle="bold" />

        </RelativeLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="24dp"
             android:gravity="center"
             android:textSize="12sp"
             android:textColor="#666"
             android:id="@+id/version_text"
             android:text="EzConvert v0.2.0 | FFmpeg: 4.4.LTS" />

        <ImageButton
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/ic_menu"
             android:contentDescription="设置"
             android:background="?android:attr/selectableItemBackgroundBorderless"
             android:padding="10dp"
             android:layout_gravity="end"
             android:id="@+id/settings_btn" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:elevation="4dp"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:textSize="16sp"
                 android:id="@+id/status_text"
                 android:text="请选择要处理的媒体文件" />

            <ProgressBar
                 android:layout_height="8dp"
                 android:layout_width="match_parent"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:progress="0"
                 android:progressTint="#2196F3"
                 android:id="@+id/progress_bar" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:textSize="12sp"
                 android:textColor="#666"
                 android:id="@+id/progress_text"
                 android:text="进度: 0%" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:elevation="2dp"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:text="文件选择"
                 android:textStyle="bold" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:backgroundTint="#2196F3"
                 android:textColor="@android:color/white"
                 android:id="@+id/select_file_btn"
                 android:text="选择媒体文件" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:elevation="2dp"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="12dp"
                 android:text="转换选项"
                 android:textStyle="bold" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center_vertical"
                     android:layout_weight="1"
                     android:text="视频格式:" />

                <Spinner
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/video_format_spinner">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center_vertical"
                     android:layout_weight="1"
                     android:text="音频格式:" />

                <Spinner
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/audio_format_spinner">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center_vertical"
                     android:layout_weight="1"
                     android:text="质量设置:" />

                <Spinner
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/quality_spinner">

                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:elevation="2dp"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="12dp"
                 android:text="视频处理"
                 android:textStyle="bold" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#4CAF50"
                 android:textColor="@android:color/white"
                 android:id="@+id/convert_btn"
                 android:text="转换格式" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#FF9800"
                 android:textColor="@android:color/white"
                 android:id="@+id/compress_btn"
                 android:text="压缩视频" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#9C27B0"
                 android:textColor="@android:color/white"
                 android:id="@+id/extract_audio_btn"
                 android:text="提取音频" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#795548"
                 android:textColor="@android:color/white"
                 android:id="@+id/cut_video_btn"
                 android:text="裁剪视频" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#607D8B"
                 android:textColor="@android:color/white"
                 android:id="@+id/screenshot_btn"
                 android:text="视频截图" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:background="@drawable/card_background"
             android:elevation="2dp"
             android:padding="16dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="12dp"
                 android:text="音频处理"
                 android:textStyle="bold" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#E91E63"
                 android:textColor="@android:color/white"
                 android:id="@+id/convert_audio_btn"
                 android:text="转换音频格式" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="8dp"
                 android:backgroundTint="#3F51B5"
                 android:textColor="@android:color/white"
                 android:id="@+id/cut_audio_btn"
                 android:text="裁剪音频" />

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:textSize="12sp"
             android:textColor="#666"
             android:layout_marginTop="8dp"
             android:text="提示: 输出文件将保存在下载文件夹中" />

    </LinearLayout>

</ScrollView>